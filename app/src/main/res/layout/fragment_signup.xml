<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:background="@drawable/background"
    android:weightSum="1">

    <ImageView
        android:layout_width="161dp"
        android:layout_height="162dp"
        android:id="@+id/imageView"
        android:src="@drawable/erni_mood_icon"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/signUpTitle"
        android:id="@+id/signUpTitleLabel"
        android:layout_gravity="center_horizontal"
        android:textColor="#444"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/signUpUserInput"
        android:inputType="text"
        android:hint="@string/signUpUsernameHint1"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signUpPasswordInput"
        android:hint="@string/SignUpPasswordHint"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="330dp"

        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signUpEmailInput"
        android:layout_gravity="center_horizontal"
        android:hint="@string/signUpEmailHint" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/signUpPhoneInput"
        android:hint="@string/signUpPhoneHint"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/signUpError"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="@string/signUpSendButton"
        android:id="@+id/signUpButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/common_signin_btn_default_background" />


</LinearLayout>