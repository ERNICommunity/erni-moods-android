<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/greeting"
        android:id="@+id/textViewGreeting"
        android:textAlignment="center"
        android:gravity="center" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_VeryHappy"
        android:src="@drawable/smiley_very_happy"
        android:layout_gravity="center_horizontal"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/text_moodVeryHappy" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_Good"
        android:src="@drawable/smiley_good"
        android:contentDescription="@string/text_moodGood"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:cropToPadding="true"
        android:onClick="setMood" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_SoSoLaLa"
        android:src="@drawable/smiley_sosolala"
        android:contentDescription="@string/text_moodSoSoLaLa"
        android:layout_gravity="center_horizontal"
        android:onClick="setMood" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_NotAmused"
        android:src="@drawable/smiley_not_amused"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/text_moodNotAmused"
        android:layout_gravity="center_horizontal"
        android:onClick="setMood" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_VeryMoody"
        android:src="@drawable/smiley_very_moody"
        android:contentDescription="@string/text_moodVeryMoody"
        android:focusable="false"
        android:layout_gravity="center_horizontal"
        android:onClick="setMood" />

</LinearLayout>